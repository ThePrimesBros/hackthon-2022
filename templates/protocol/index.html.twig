{% extends 'base.html.twig' %}

{% block title %}Protocol index{% endblock %}

{% block body %}
    <h1>Protocol index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for protocol in protocols %}
            <tr>
                <td>{{ protocol.id }}</td>
                <td>{{ protocol.name }}</td>
                <td>{{ protocol.description }}</td>
                <td>
                    <a href="{{ path('app_protocol_show', {'id': protocol.id}) }}">show</a>
                    <a href="{{ path('app_protocol_edit', {'id': protocol.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_protocol_new') }}">Create new</a>
{% endblock %}
